<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/stageTextView"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:text=""
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/stageTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/question_textbox"
        app:layout_constraintBottom_toTopOf="@id/answerOne" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerOne"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textColor="@color/black"
        android:background="@drawable/answer_button"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/answerTwo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerTwo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/answer_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/answerThree" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerThree"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/answer_button"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/answerFour" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/answerFour"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/answer_button"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>